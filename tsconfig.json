{
    "compilerOptions": {
	"lib": [
	    "es2017"
	],
	"allowJs": true,
	"checkJs": true,
	"module": "commonjs",
	"noImplicitAny": false, //true
	"removeComments": false,
	"allowUnreachableCode": false,
	"resolveJsonModule": true,
	"noImplicitReturns": true,
	"preserveConstEnums": true,
	"declaration": false, //true,
	"strict": true,
	"outDir": "./dist/",
	"target": "es6", //"es2017",
	"sourceMap": true
    },
    "include": [
	"./src/**/*",
	//    "./test/**/*"
    ],
    "exclude": [
	"./dist/**/*",
	"./node_modules/**/*"
    ]
}
